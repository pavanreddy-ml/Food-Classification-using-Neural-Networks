    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		FloatLayout:

		    GridLayout:
		        cols: 2
		        pos_hint: {'x': 522/800, 'y': 1 - 49/520}
                size_hint: 273/800, 45/520
                background_normal: ''

                spacing:3


                Button:
                    id: Random
                    text: 'Generate\nRandom'
                    color: {'normal': (173/255, 191/255, 220/255, 1), 'down': (1, 1, 1, 1)} [self.state]
                    canvas.before:
                        Color:
                            rgba: {'normal': (45/255, 158/255, 194/255, 1), 'down': (0, 0, 0, 1)} [self.state]
                        Line:
                            width: {'normal': 1.2, 'down': 0.6} [self.state]
                            rectangle: self.x, self.y, self.width, self.height
                    background_normal: ''
                    background_color: {'normal': (27/255, 36/255, 52/255, 1), 'down': (227/255, 246/255, 240/255, 1)} [self.state]
                    on_press: root.generate_random(self)




                Button:
                    id: Upload
                    text: 'Upload\nImage'
                    color: {'normal': (173/255, 191/255, 220/255, 1), 'down': (1, 1, 1, 1)} [self.state]
                    canvas.before:
                        Color:
                            rgba: {'normal': (45/255, 158/255, 194/255, 1), 'down': (0, 0, 0, 1)} [self.state]
                        Line:
                            width: {'normal': 1.2, 'down': 0.6} [self.state]
                            rectangle: self.x, self.y, self.width, self.height
                    background_normal: ''
                    background_color: {'normal': (27/255, 36/255, 52/255, 1), 'down': (227/255, 246/255, 240/255, 1)} [self.state]
                    on_press: root.upload_image(self)


    BoxLayout:
        orientation: "vertical"
		size: root.width, root.height

        FloatLayout:

		    GridLayout:
		        cols: 1
		        pos_hint: {'x': 522/800, 'y': 1 - 104/520}
                size_hint: 273/800, 45/520

                spacing:3

                Image:
                    id: img
                    source: ""




    BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

        FloatLayout:

		    GridLayout:
		        cols: 2
		        pos_hint: {'x': 522/800, 'y': 1 - 159/520}
                size_hint: 273/800, 45/520
                background_normal: ''

                spacing:3


                Button:
                    id: Predict
                    text: 'Predict'
                    color: {'normal': (173/255, 191/255, 220/255, 1), 'down': (1, 1, 1, 1)} [self.state]
                    canvas.before:
                        Color:
                            rgba: {'normal': (45/255, 158/255, 194/255, 1), 'down': (0, 0, 0, 1)} [self.state]
                        Line:
                            width: {'normal': 1.2, 'down': 0.6} [self.state]
                            rectangle: self.x, self.y, self.width, self.height
                    background_normal: ''
                    background_color: {'normal': (27/255, 36/255, 52/255, 1), 'down': (227/255, 246/255, 240/255, 1)} [self.state]
                    on_press: root.predict(self)



